root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py,java,kt,kts,scala,rs,xml,kt.spec,kts.spec}]
indent_size = 4

[{Makefile,*.go}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = 80
